#!/bin/bash

if [ "$1" = "remove" ]
then
    dpkg -l | grep ^rc | awk '{print $2}' | sudo xargs dpkg -P
elif [ "$1" = "-h" ]
then
    echo "$0" [remove] [-h]
    echo
    echo Display or remove the packages, which are not installed,
    echo but have residual config.

else
	dpkg -l | awk '/^rc/ {print $2}'
fi

